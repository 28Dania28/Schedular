<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAnahata</item>
        <item name="colorPrimaryDark">@color/root</item>
        <item name="android:navigationBarColor">@color/root</item>
        <item name="android:statusBarColor">@color/upper</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="WhiteWhiteTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="android:navigationBarColor">@color/root</item>
        <item name="android:statusBarColor">@color/root</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BubbleTabText">
